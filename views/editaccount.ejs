<% include layout %>
<div class="roe">
<ul class="list-inline">
  <li><a href="/account/">账号列表</a></li>
  <li><a href="/account/add">添加账号</a></li>
</ul>
</div>
<div class="row">
  <form class="form-horizontal" method="POST" action="/account/create">
    <fieldset>
      <div id="legend" class="">
        <legend class="">添加账号</legend>
      </div>
      <input type="hidden" name="_id" value="<%= account._id %>" />
    <div class="control-group">
        <label class="control-label" for="input01">登录名</label>
        <div class="controls">
          <input type="text" name="username" value="<%= account.username %>" placeholder="登录名" class="input-xlarge">
          <p class="help-block">登录名英文数字</p>
        </div>
    </div>
    <div class="control-group">
        <label class="control-label" for="input01">邮箱</label>
        <div class="controls">
          <input type="text" name="email" value="<%= account.email %>" placeholder="邮箱" class="input-xlarge">
          <p class="help-block">有效邮箱</p>
        </div>
    </div>
    <div class="control-group">
        <label class="control-label" for="input01">手机号码</label>
        <div class="controls">
          <input type="text" name="phone" value="<%= account.phone %>" placeholder="手机号" class="input-xlarge">
          <p class="help-block">11位手机号码</p>
        </div>
    </div> 
    <div class="control-group">
        <label class="control-label" for="input01">真实姓名</label>
        <div class="controls">
          <input type="text" name="realname"  value="<%= account.realname %>"  placeholder="真实姓名" class="input-xlarge">
          <p class="help-block">真实姓名</p>
        </div>
    </div> 
    <div class="control-group">
        <label class="control-label" for="input01">职务</label>
        <div class="controls">
          <input type="text" name="title"  value="<%= account.title %>" placeholder="职务" class="input-xlarge">
          <p class="help-block">职务 班长，学习委员 课代表。。。。</p>
        </div>
    </div> 
    <div class="control-group">
    <label class="control-label" for="input01">角色</label>
    <div class="controls">
      <div class="radio">
        <label>
          <input type="radio" name="optionsRadios" id="optionsRadios1" value="student" 
          <% if(account.isstudent){ %>checked <%}%>>
          学生
        </label>
      </div>
      <div class="radio">
        <label>
          <input type="radio" name="optionsRadios" id="optionsRadios2" value="teacher"<% if(account.isteacher){ %>checked <%}%>>
         教师
        </label>
      </div>
      <div class="radio">
        <label>
          <input type="radio" name="optionsRadios" id="optionsRadios3" value="director" <% if(account.isdirector){ %>checked <%}%>>
          教导主任
        </label>
      </div>
      <div class="radio">
        <label>
          <input type="radio" name="optionsRadios" id="optionsRadios4" value="admin" <% if(account.isadmin){ %>checked <%}%>>
          管理员
        </label>
      </div>
     </div>
    </div> 
    <div class="control-group">
        <label class="control-label" for="input01">设置登录密码</label>
        <div class="controls">
          <input type="password" name="password" placeholder="登录密码" class="input-xlarge">
          <p class="help-block">登录密码</p>
        </div>
    </div> 
          <div class="controls">
            <button type="submit" class="btn btn-primary">保存</button>
			      <button type="submit" class="btn btn-danger">取消</button>
          </div>
		  

    </fieldset>
  </form>
</div>
<% include footer %>