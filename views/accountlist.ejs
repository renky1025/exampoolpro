<% include layout %>


<div class="roe">
<ul class="list-inline">
  <li><a href="/account/">账号列表</a></li>
  <li><a href="/account/add">添加账号</a></li>
</ul>
</div>
<div class="row">

<table class="table table-hover">
  <thead>
    <tr>      
      <th>登录名</th>
      <th>邮箱</th>
      <th>手机号码</th>
      <th>真实姓名</th>
      <th>职务</th>
      <th>创建时间</th>
      <th>更新时间</th>
      <th>角色</th>
      
      <th>操作</th>
    </tr>
  </thead>
<% if(results){ %>
  <% results.forEach(function(item){ %>
  <tr>
    <td><%= item.username %></td>
    <td><%= item.email %></td>
    <td><%= item.phone %></td>
    <td><%= item.realname %></td>   
    <td><%= item.title %></td>
    <td><%= item.created_date %></td> 
    <td><%= item.updated_date %></td>
    <td>
    <%if(item.isstudent) {%>
    学生
    <% }else if(item.isteacher) {%>
    教师
    <% }else if(item.isdirector) {%>
    教导主任
    <% }else if(item.isadmin) {%>
    管理员
    <% }%>
    
    </td>
    
    <td><a href="/account/edit/<%= item._id %>" > 修改 </a>  || <a href="/account/remove/<%= item._id %>" > 删除 </a></td>
    
  </tr>
  <% });%>
<% } %>

</table>

</div>
<% include footer %>